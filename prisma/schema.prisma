generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

enum OutageType {
  panel_outage
  temperature_outage
  led_outage
}

model rawOutages {
  id             BigInt      @id @default(autoincrement())
  controllerId   String      @db.VarChar(64) @map("controller_id")
  outageType     OutageType  @map("outage_type")
  reportedAt     DateTime    @db.Timestamptz(6) @map("reported_at")

  @@index([controllerId, outageType, reportedAt], name: "idx_ct_at")
  @@unique([controllerId, outageType, reportedAt], name: "uniq_raw_outage")
  @@map("raw_outages")
}

model aggregatedOutages {
  id            BigInt     @id @default(autoincrement())
  controllerId  String     @db.VarChar(64) @map("controller_id")
  outageType    OutageType @map("outage_type")
  startTime     DateTime   @db.Timestamptz(6) @map("start_time")
  endTime       DateTime   @db.Timestamptz(6) @map("end_time")

  @@index([outageType, startTime, endTime], name: "idx_query")
  @@index([controllerId, outageType, startTime], name: "idx_ct")
  @@map("aggregated_outages")
}
